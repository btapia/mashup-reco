<html>
  <body>
    <div class="container">
      <div class="panel panel-default panel-table">
        <div class="panel-heading">
          <h2>
            <%= link_to validations_path do %>
                <i class="glyphicon glyphicon-chevron-left"></i>
            <% end %>
            <%= "#{@cross_validation.name} folds" %>
          </h2>
        </div>
        <div class="panel-body">
          <table class="table table-hover">
            <thead>
            <tr>
              <th>ID</th>
              <th>Run</th>
              <th>Set size</th>
              <th>Score</th>
              <th>Max score</th>
            </tr>
            </thead>
            <tbody>
            <% @folds.each do |fold| %>
                <tr>
                  <td><%= fold.id %></td>
                  <td><%= fold.run %></td>
                  <td><%= fold.set_size %></td>
                  <td><%= fold.score %></td>
                  <td><%= fold.max_score %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <%= render partial: 'shared/table_footer', locals: {collection: @folds} %>
      </div>
    </div>
  </body>
</html>